{% extends 'BackendBundle::layout.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"><i class="fa fa-plane fa-fw"></i> Aviones</h1>
        </div>
    </div>
    
    <div class="row">
        <div class="col-lg-6">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Matr&iacute;cula</th>
                            <th>En Servicio</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in aviones %}
                            <tr>
                                <td>{{ item.matricula }}</td>
                                <td>{{ item.servicio ? 'Si' : 'No' }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-lg-6">
            <form action="" method="POST" class="form-horizontal" role="form">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Editar Avion</h3>
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label for="input" class="col-sm-2 control-label">Matricula</label>
                            <div class="col-sm-10">
                                <input type="text" name="" id="input" class="form-control" value="" required="required">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="input" class="col-sm-2 control-label">En Servicio</label>
                            <div class="col-sm-10">
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" value="1">
                                        En Servicio
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                <div class="btn-group pull-right">
                                    <button type="submit" class="btn btn-default btn-primary"><i class="fa fa-save fw"></i> Guardar</button>
                                    <button type="button" class="btn btn-default btn-danger"><i class="fa fa-trash fw"></i> Eliminar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}