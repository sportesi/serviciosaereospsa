{% extends 'BackendBundle::layout.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"><i class="fa fa-plane fa-fw"></i> Aviones</h1>
        </div>
    </div>
    
    <div class="row">
        <div class="col-lg-6">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Matr&iacute;cula</th>
                            <th>En Servicio</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in aviones %}
                            <tr onclick="window.location.href = '{{ path('BackendAvionEdit', { 'id' : item.id }) }}'">
                                <td>{{ item.matricula }}</td>
                                <td>{{ item.servicio ? 'Si' : 'No' }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        
        <div class="col-lg-6">
            {{ form_start(form, {'attr' : { 'class' : 'form-horizontal' }}) }}
                <div class="panel panel-default">
                    <div class="panel-heading">
                        {% if editar %}
                            <h3 class="panel-title">Editar Avion</h3>
                        {% else %}
                            <h3 class="panel-title">Agregar Avion</h3>
                        {% endif %}
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label for="input" class="col-sm-2 control-label">Matricula</label>
                            <div class="col-sm-10">
                                {{ form_widget(form.matricula, { 'attr' : { 'class' : 'form-control' } }) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="input" class="col-sm-2 control-label">En Servicio</label>
                            <div class="col-sm-10">
                                <div class="checkbox">
                                    <label>
                                        {{ form_widget(form.servicio) }}
                                        En Servicio
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                <div class="btn-group pull-right">
                                    {% if editar %}
                                        <button type="submit" class="btn btn-default btn-primary"><i class="fa fa-save fw"></i> Guardar</button>
                                        <button type="button" onclick="deleteAvion()" class="btn btn-default btn-danger"><i class="fa fa-trash fw"></i> Eliminar</button>
                                        <script type="text/javascript">
                                            function deleteAvion() {
                                                var href = "{{ path('BackendAvionDelete', {'id' : avionId }) }}";
                                                swal({
                                                    title: 'Estas seguro?',
                                                    text: 'Estas a punto de eliminar un registro. \nEsta accion no puede deshacerse',
                                                    type: 'warning',
                                                    showCancelButton: true,
                                                    cancelButtonText: 'Cancelar'
                                                }, function(){
                                                    window.location.href = href
                                                })
                                            }
                                        </script>
                                    {% else %}
                                        <button type="submit" class="btn btn-default btn-primary"><i class="fa fa-save fw"></i> Agregar</button>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}