{% extends 'BackendBundle::layout.html.twig' %}

{% block styles %}
{% endblock %}

{% block scripts %}
{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                <i class="fa fa-pencil fa-fw"></i> Editar Piloto
                <a href="{{ path("BackendPilotoHomepage") }}" class="btn btn-primary pull-right">Volver al listado</a>
            </h1>
        </div>
    </div>

    <div class="row">
        <div class="panel panel-default">
            <div class="panel-body">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    {% if resetForm is defined %}
        <div class="row">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>Opciones</h4>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <div class="col-sm-12">
                            <form class="pull-left form-horizontal" style="margin-right: 10px;">
                                <a href="{{ path("backend_piloto_sendwelcome", { id: form.vars.value.id }) }}" class="btn btn-primary">Enviar bienvenida</a>    
                            </form>
                            {{ form_start(resetForm, { attr: { class: 'pull-left', style: "margin-right: 10px;" } }) }}
                            {{ form_widget(resetForm) }}
                            <button type="submit" class="btn btn-primary">Reiniciar Contrase&ntilde;a</button>
                            {{ form_end(resetForm) }}
                            {{ form_start(deleteForm, { attr: { class: 'pull-left' } }) }}
                            {{ form_widget(deleteForm) }}
                            <button type="submit" class="btn btn-danger">Eliminar Piloto</button>
                            {{ form_end(deleteForm) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

{% endblock %}
