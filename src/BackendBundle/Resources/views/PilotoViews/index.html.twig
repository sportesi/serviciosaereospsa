{% endblock %}

{% block body %}
    
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"><i class="fa fa-users fa-fw"></i> Pilotos</h1>
        </div>
    </div>
	
	<div class="row">
		<div class="dataTable_wrapper">
			<table class="table table-hover table-striped table-bordered">
				<thead>
					<tr>
						<th>Apellido</th>
						<th>Nombre</th>
						<th>Email</th>
					</tr>
				</thead>
				<tbody>
					{% for item in pilotos %}
						<tr>
							<td>{{ item.apellido }}</td>
							<td>{{ item.nombre }}</td>
							<td>{{ item.email }}</td>
						</tr>
					{% else %}
					    <tr>
					    	<td colspan="5"><b>No hay pilotos cargados</b></td>
					    </tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>

{% endblock %}