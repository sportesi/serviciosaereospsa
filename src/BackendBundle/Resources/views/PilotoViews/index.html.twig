{% extends 'BackendBundle::layout.html.twig' %}

{% block body %}
    
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"><i class="fa fa-users fa-fw"></i> Pilotos</h1>
        </div>
    </div>
	
	<div class="row">
		<div class="table-responsive">
			<table class="table table-hover table-striped table-bordered">
				<thead>
					<tr>
						<th>Nombre</th>
						<th>Apellido</th>
						<th>Email</th>
						<th>Tel&eacute;fono</th>
						<th>Usuario</th>
					</tr>
				</thead>
				<tbody>
					{% for item in pilotos %}
						<tr>
							<td>{{ item.nombre }}</td>
							<td>{{ item.apellido }}</td>
							<td>{{ item.email }}</td>
							<td>{{ item.telefono }}</td>
							<td></td>
						</tr>
					{% else %}
					    <tr>
					    	<td colspan="5"><b>No hay pilotos cargados</b></td>
					    </tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>

{% endblock %}