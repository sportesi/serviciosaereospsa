<div class="modal fade" id="newEvent">
	<div class="modal-dialog">
		<form action="" method="POST" class="form-horizontal form-new-event" role="form">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
					<h4 class="modal-title form-new-title">Nuevo Turno</h4>
					<h4 class="modal-title form-edit-title">Editar Turno</h4>
				</div>
				<div class="modal-body">
					<input type="hidden" name="turno[id]">
					<input type="hidden" name="turno[dia]">
					<input type="hidden" name="turno[horario]">
					<input type="hidden" name="turno[avion]">
					<input type="hidden" name="turno[fecha]">
					<input type="hidden" name="turno[updatedAt]">
					<div class="form-group form-group-piloto">
						<label for="inputPiloto" class="col-sm-2 control-label">Piloto:</label>
						<div class="col-sm-10">
							<select name="turno[piloto]" id="inputPiloto" class="form-control" required="required" style="width: 100%">
								<option value="">Seleccione el/la piloto</option>
								{% for itemPiloto in pilotos %}
								    <option value="{{ itemPiloto.id }}">{{ itemPiloto.apellido ~ ', ' ~ itemPiloto.nombre }}</option>
								{% endfor %}
							</select>
						</div>
					</div>
					<div class="form-group  form-group-alumno">
						<label for="inputAlumno" class="col-sm-2 control-label">Alumno:</label>
						<div class="col-sm-10">
							<select name="turno[alumno]" id="inputAlumno" class="form-control" required="required" style="width: 100%">
								<option value="">Seleccione el/la alumno/a...</option>
								{% for itemAlumno in alumnos %}
								    <option value="{{ itemAlumno.id }}">{{ itemAlumno.apellido ~ ', ' ~ itemAlumno.nombre }}</option>
								{% endfor %}
							</select>
						</div>
					</div>
					<div class="form-group">
						<label for="textareaComentario" class="col-sm-2 control-label">Comentario:</label>
						<div class="col-sm-10">
							<textarea name="turno[comentario]" id="textareaComentario" class="form-control" rows="3" required="required"></textarea>
						</div>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-danger form-delete-btn"  onclick="deleteTurno(this)">Eliminar turno</button>
					<button type="button" class="btn btn-warning" data-dismiss="modal">Cancelar edici&oacute;n</button>
					<button type="submit" class="btn btn-success form-new-btn">Crear turno</button>
					<button type="submit" class="btn btn-success form-edit-btn">Editar turno</button>
					<button type="button" class="btn btn-info form-move-btn">Mover turno</button>
				</div>
			</div>
		</form>
	</div>
</div>