{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}

	<div class="text-center">Iniciar Sesi&oacute;n</div>
	<br>

	{% if error %}
	<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}

	<form role="form" action="{{ path("fos_user_security_check") }}" method="post">
		<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
	    <fieldset>
	        <div class="form-group">
	            <input type="text" id="username" placeholder="Usuario" name="_username" 
	                   value="{{ last_username }}"class="form-control form-control-line" required autofocus/>
	        </div>
	        <div class="form-group">
	            <input type="password" id="password" placeholder="Contrase&ntilde;a"
			           name="_password" class="form-control form-control-line" required="required" />
	        </div>
	        {# <div class="checkbox">
	            <label>
	                <input name="remember" type="checkbox" value="Remember Me">Remember Me
	            </label>
	        </div> #}
	        <input type="submit" id="_submit" name="_submit" 
	               value="{{ 'security.login.submit'|trans }}" class="btn btn-lg btn-success btn-block"/>
	    </fieldset>
	</form>

{% endblock fos_user_content %}