{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}

	<div class="text-muted m-b-5">Iniciar Sesi&oacute;n</div>

	{% if error %}
	<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}

	<form action="{{ path("fos_user_security_check") }}" method="post" class="relative">
		<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
		<div class="form-group">
			<input type="text" id="username" placeholder="Usuario" name="_username"
			value="{{ last_username }}"class="form-control form-control-line" required="required" />
		</div>
		<div class="form-group item">
			<input type="password" id="password" placeholder="Contrase&ntilde;a"
			name="_password" class="form-control form-control-line" required="required" />
			<div class="wrapper right top">
				<input type="submit" id="_submit" name="_submit" 
				value="{{ 'security.login.submit'|trans }}" class="btn btn-primary btn-line btn-rounded"/>
			</div>
		</div>
	</form>
	<div class="clearfix">
		{# <a href="{{ path('fos_user_resetting_request') }}" class="pull-right">Olvidaste tu contrase&ntilde;a?</a> #}
	</div> 

{% endblock fos_user_content %}